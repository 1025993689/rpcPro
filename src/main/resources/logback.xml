<configuration>
    <!-- 定义文件 Appender -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <!-- 设置日志文件路径和名称 -->
        <file>logs/app.log</file>

        <!-- 定义日志输出格式 -->
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 配置根 Logger，将文件 Appender 关联到根 Logger -->
    <root level="debug">
        <appender-ref ref="FILE" />
    </root>
</configuration>