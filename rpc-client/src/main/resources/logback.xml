<configuration>
    <!-- 定义文件 Appender 使用 TimeBasedRollingPolicy -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 设置日志文件路径和临时基本名称（不会直接用于最终日志文件） -->
        <file>logs/netty_temp.log</file>

        <!-- 定义日志输出格式 -->
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>

        <!-- 配置滚动策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 设置滚动后的文件名格式，这里按照天进行分割 -->
            <fileNamePattern>logs/netty.%d{yyyy-MM-dd}.log</fileNamePattern>

            <!-- 可选：配置保留历史日志的最大天数 -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- 配置根 Logger，将文件 Appender 关联到根 Logger -->
    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>
